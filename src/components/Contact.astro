<section id="kontakt" class="py-20 bg-gray-50">
  <form class="max-w-xl mx-auto grid gap-4">
    <label class="flex flex-col">
      <span class="mb-1">Namn</span>
      <input type="text" name="name" class="border p-2" />
    </label>
    <label class="flex flex-col">
      <span class="mb-1">E-post</span>
      <input type="email" name="email" class="border p-2" />
    </label>
    <label class="flex flex-col">
      <span class="mb-1">Meddelande</span>
      <textarea name="message" class="border p-2"></textarea>
    </label>
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Skicka</button>
  </form>
</section>
