---
const navLinks = [
  { href: '/', text: 'Start' },
  { href: '/tjanster', text: 'Tjänster' },
  { href: '/om-oss', text: 'Om oss' },
  { href: '/referenser', text: 'Referenser' },
  { href: '/blogg', text: 'Blogg' },
  { href: '/karriar', text: 'Karriär' },
  { href: '/kontakt', text: 'Kontakt' }
];
---
<header class="bg-white shadow">
  <nav class="container mx-auto flex flex-wrap items-center justify-between p-4">
    <a href="/" class="font-bold text-xl">Fastighetswebb</a>
    <ul class="flex gap-4" aria-label="Huvudnavigation">
      {navLinks.map(link => (
        <li key={link.href}>
          <a href={link.href} class="hover:underline">
            {link.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
