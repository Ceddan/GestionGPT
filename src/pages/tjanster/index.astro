---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Services from '../../components/Services.astro';

let services = [];
try {
  const res = await fetch('https://example.com/api/services.json');
  if (res.ok) services = await res.json();
} catch (e) {
  services = [
    { title: 'Fastighetsförvaltning', description: 'Helhetsförvaltning' },
    { title: 'Fastighetsservice', description: 'Drift och underhåll' },
    { title: 'Proptech', description: 'Digitala verktyg' }
  ];
}
---
<BaseLayout>
  <Fragment slot="head">
    <title>Tjänster</title>
  </Fragment>
  <h1 class="text-3xl font-bold text-center my-8">Våra tjänster</h1>
  <Services services={services} />
</BaseLayout>
